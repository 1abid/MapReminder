<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.Map.Reminder.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Map.Reminder.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.Map.Reminder.EditText" parent="Widget.AppCompat.EditText">
        <item name="hintTextAppearance">@style/TextAppearance.Map.Reminder.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.Map.Reminder.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.SearchResult.Title</item>
    </style>

</resources>
